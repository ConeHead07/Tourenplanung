                            tour.attr("id", "fbDispoRoute_" + data.Auftragsnummer);
                            
                        Fb.DispoCalendarEvents.onDropRoute.apply(tour.get(0));

                    } else {
                        alert( 'Tour mit ID ' + tourNodeId + ' (length:'+$("#"+tourNodeId+".fbDispoRoute").length+') nicht gefunden!');
