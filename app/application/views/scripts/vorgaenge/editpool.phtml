                } else {
//                    On-Update-Mode
                }
                $("#PoolAddDialog").dialog('close');
            },
            error: function() {
                $("#savePool").removeClass("ui-state-disabled");
                alert("Beim Speichern sind Fehler aufgetreten!");
            },
            dataType: 'json',
            async: false
        });
    }); 
    
